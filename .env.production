# Production Environment Variables for NSS IIITH Website

# API Configuration
API_ENV=production
API_PORT=8000

# Database Configuration
MONGODB_URL=mongodb://admin:password123@mongodb:27017/nss_db?authSource=admin
MONGODB_DB_NAME=nss_db

# Redis Configuration
REDIS_URL=redis://redis:6379

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://nginx/api
NODE_ENV=production
NEXT_TELEMETRY_DISABLED=1

# Security
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost,http://nginx,https://your-domain.com

# Monitoring
PROMETHEUS_ENABLED=true
METRICS_PORT=9090

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads
