# Development Environment Variables for NSS IIITH Website

# API Configuration
API_ENV=development
API_PORT=8000

# Database Configuration
MONGODB_URL=mongodb://admin:password123@localhost:27017/nss_db?authSource=admin
MONGODB_DB_NAME=nss_db

# Login Configuration
CAS_SERVER_URL=https://login.iiit.ac.in/cas/
SERVICE_URL=http://localhost:8000/login

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8000
NODE_ENV=development
NEXT_TELEMETRY_DISABLED=1

# Security (Use weak secrets for development only)
JWT_SECRET=dev-jwt-secret-not-for-production
SESSION_SECRET=dev-session-secret-not-for-production

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Monitoring
PROMETHEUS_ENABLED=false
METRICS_PORT=9090

# Logging
LOG_LEVEL=debug
LOG_FORMAT=pretty

# Rate Limiting (More lenient for development)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Email Configuration (for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=test@example.com
SMTP_PASS=test-password

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads
